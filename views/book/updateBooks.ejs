<%- include ('../header') %>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-dark">
      <h1 class="text-center mb-3 text-white">
        <i class="fas fa-user-plus"></i> Update Books
      </h1>
      <%- include ('../messages') %>
      <form action="/books/update" method="POST">
        <input type="hidden" name="id" id="id" value="<%= books._id %>">

        <div class="form-group text-white">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" 
            placeholder="Enter Name" value="<%= books.name %>" />
        </div>
        <div class="form-group text-white">
          <label for="price">Price</label>
          <input type="price" id="price" name="price" class="form-control" 
            placeholder="Enter Price" value="<%= books.price %>" />
        </div>
        <div class="form-group text-white">
          <label for="authors">Authors</label>
          <input type="authors" id="authors" name="authors" class="form-control" 
            placeholder="Enter Authors" value="<%= books.authors %>" />
        </div>
        <br>
        <div class="form-group text-white">
          <label for="date">Release Date</label>
          <input type="date" id="date" name="date" 
            class="form-control" placeholder="Enter Release Date" 
            value="<%= newDate %>" />
        </div>
        <div class="form-group text-white">
          <label for="stock">Stock</label>
          <input type="stock" id="stock" name="stock" class="form-control" 
            placeholder="Enter Stock" value="<%= books.stock %>" />
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">
          Update Books
        </button>
      </form>
    </div>
  </div>
</div>