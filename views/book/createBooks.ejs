<%- include ('../header') %>

<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body bg-dark">
      <h1 class="text-center mb-3 text-white">
        <i class="fas fa-user-plus"></i> Add Books
      </h1>
      <%- include ('../messages') %>
      <form action="/books/create" method="POST">
        <div class="form-group text-white">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Book Name" />
        </div>
        <div class="form-group text-white">
          <label for="price">Price</label>
          <input type="price" id="price" name="price" class="form-control" placeholder="Enter Price" />
        </div>
        <div class="form-group text-white">
          <label for="authors">Authors</label>
          <input type="authors" id="authors" name="authors" class="form-control" placeholder="Enter Author Name" />
        </div>
        <br>
        <div class="form-group text-white">
          <label for="email">Release Date</label>
          <input type="date" id="date" name="date" class="form-control" placeholder="Enter Release Date" />
        </div>
        <div class="form-group text-white">
          <label for="stock">Stock</label>
          <input type="stock" id="stock" name="stock" class="form-control" placeholder="Enter Stock" />
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-block">
          Add Books
        </button>
        <button type="submit" class="btn btn-info btn-block text-white" onclick="history.back()">
          Back
        </button>
      </form>
    </div>
  </div>
</div>